{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "cd server && npm install",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/:path*",
            "destination": "/assets/:path*"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 10
        }
    }
}